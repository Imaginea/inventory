!!!
%html
  %head
    %title DeviceInventory
    = stylesheet_link_tag    "application", :media => "all"
    = javascript_include_tag "application"
    = csrf_meta_tags
  %body
  %body
    .navbar.navbar-fixed-top
      .navbar-inner
        .container-fluid
          %a.btn.btn-navbar{"data-target" => ".nav-collapse", "data-toggle" => "collapse"}
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar
          %a.brand{:href => "#"} Device Inventory
          .btn-group.pull-right
            %a.btn.dropdown-toggle{"data-toggle" => "dropdown", :href => "#"}
              %i.icon-user
              = user_signed_in? ? current_user.email.sub(/@.*$/, '') : 'Guest'
              %span.caret
            %ul.dropdown-menu
              - if user_signed_in?
                %li
                  %a{:href => "#"} Profile
                %li.divider
                %li= link_to("Sign out", destroy_user_session_path, :method => :delete)
              - else
                %li
                  = link_to 'Login', signin_path
          .nav-collapse
            %ul.nav
              %li.active
                %a{:href => "#"} Home
              %li
                %a{:href => "#about"} About
              %li
                %a{:href => "#contact"} Contact
          / /.nav-collapse
    .container-fluid
      .row-fluid
        .span3
          .well.sidebar-nav
            %ul.nav.nav-list
              %li.nav-header Sidebar
              %li.nav-header Sidebar
              %li
                = link_to 'Add Device', new_device_path
              %li
                = link_to 'Search Devices', '#'
              %li
                = link_to 'List Devices', devices_path
              %li.nav-header Sidebar
              %li
                %a{:href => "#"} Link
              %li
                %a{:href => "#"} Link
              %li
                %a{:href => "#"} Link
              %li
                %a{:href => "#"} Link
              %li
                %a{:href => "#"} Link
              %li
                %a{:href => "#"} Link
              %li.nav-header Sidebar
              %li
                %a{:href => "#"} Link
              %li
                %a{:href => "#"} Link
              %li
                %a{:href => "#"} Link
          / /.well
        / /span
        .span9
          .hero-unit
            = render 'shared/flashes'
            = yield
        / /span
      / /row
      %hr/
      %footer
        %p &copy; Copyright.Imaginea.2012.
    / /.fluid-container
