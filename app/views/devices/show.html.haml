.pager
  %li.previous
    = link_to '<< Devices List', devices_path

.well
  %legend.row-fluid
    .pull-left
      %h2= device_name(@device)
    .pull-right
      = link_to 'Edit', edit_device_path(@device), class: 'btn btn-mini'
      = link_to 'Delete', @device, method: :delete, confirm: 'Are you sure?', class: 'btn btn-mini btn-warning'
  .row-fluid
    .span4
      .field
        %b OS:
        = "#{@device.os} #{@device.os_version}"
      .field
        %b Project:
        = "#{@device.project}"
      .field
        %b Environment:
        = "#{@device.environment}"
      .field
        %b Status:
        = "#{@device.status}"
      .field
        %b Owner:
        = "#{@device.owner_id}"
      .field
        %b Possesser:
        = "#{@device.possesser_id}"
    .span4
      .field
        %b Mac Address:
        = "#{@device.mac_addr}"
      .field
        %b Network:
        = "#{@device.service_provider} (#{@device.phone_num})"
      .field
        %b IP:
        = "#{@device.ip_addr}"
      .field
        %b Serial:
        = "#{@device.serial_num}"
    .span4
      .img-placeholder.small
        = image_tag @device.device_photo.url(:small), height: 250, width: 100

= render 'accessories/list'

