.pager
  %li.previous
    = link_to '<< Devices List', devices_path

.well
  %legend.row-fluid
    .pull-left
      %h2
        Editing
        = device_name(@device)
    .pull-right
      = link_to 'Delete', @device, method: :delete, class: 'btn btn-medium btn-warning', data: {confirm: 'Are you sure?'}

  .row-fluid
    = render 'form'
