.pager
  %li.previous
    = link_to '<< Devices List', devices_path

.well
  %legend.row-fluid
    .pull-left
      %h2
        Editing
        = device_name(@device)
    .pull-right
      = state_label(@device)
      - if @device.not_available?
        = link_to 'Make Available', make_available_device_path(@device), method: :put, class: 'btn btn-primary', data: {confirm: 'Are you sure you want to make this device available?'}
      - else
        = link_to 'Make Unavailable', make_unavailable_device_path(@device), method: :put, class: 'btn btn-warning', data: {confirm: 'Are you sure you want to make this device unavailable?'}

  .row-fluid
    = render 'form'
